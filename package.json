{
  "name": "@typed-ember/renovate-config",
  "version": "0.0.0-development",
  "description": "Renovate bot sharable config for typed-ember repositories",
  "repository": "git@github.com:typed-ember/renovate-config.git",
  "author": "Mike North <michael.l.north@gmail.com>",
  "license": "MIT",
  "scripts": {
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "test": "echo 'no tests'"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@commitlint/travis-cli": "12.1.1",
    "@typed-ember/semantic-release-config": "1.1.8",
    "husky": "6.0.0",
    "semantic-release": "19.0.3",
    "travis-deploy-once": "5.0.11"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:js-lib",
        ":pinOnlyDevDependencies",
        ":automergePatch",
        ":automergeMinor",
        ":semanticCommits"
      ],
      "packageRules": [
        {
          "packageNames": [
            "typescript",
            "tslint",
            "typedoc"
          ],
          "groupName": "typescript packages",
          "groupSlug": "typescript",
          "minor": {
            "automerge": false
          }
        },
        {
          "packageNames": [
            "^@types"
          ],
          "groupName": "ambient types",
          "groupSlug": "ambient-types",
          "minor": {
            "automerge": false
          }
        },
        {
          "groupName": "ember types",
          "groupSlug": "ember-types",
          "minor": {
            "automerge": false
          },
          "major": {
            "automerge": false
          },
          "packageNames": [
            "@types/ember",
            "@types/ember-data",
            "@types/ember-feature-flags",
            "@types/ember-mocha",
            "@types/ember-modal-dialog",
            "@types/ember-qunit",
            "@types/ember-resolver",
            "@types/ember-test-helpers",
            "@types/ember-testing-helpers",
            "@types/ember__application",
            "@types/ember__array",
            "@types/ember__component",
            "@types/ember__controller",
            "@types/ember__debug",
            "@types/ember__engine",
            "@types/ember__error",
            "@types/ember__object",
            "@types/ember__polyfills",
            "@types/ember__routing",
            "@types/ember__runloop",
            "@types/ember__service",
            "@types/ember__string",
            "@types/ember__test",
            "@types/ember__test-helpers",
            "@types/ember__utils"
          ]
        },
        {
          "packageNames": [
            "broccoli-asset-rev",
            "ember-cli",
            "ember-cli-dependency-checker",
            "ember-cli-eslint",
            "ember-cli-eslint",
            "ember-qunit",
            "ember-cli-sri",
            "qunit-dom",
            "ember-cli-fastboot",
            "ember-cli-htmlbars-inline-precompile",
            "ember-cli-inject-live-reload",
            "ember-cli-qunit",
            "ember-cli-shims",
            "ember-cli-release",
            "ember-cli-uglify",
            "ember-disable-prototype-extensions",
            "ember-export-application-global",
            "ember-load-initializers",
            "ember-resolver",
            "ember-source",
            "eslint-plugin-ember",
            "eslint-plugin-node",
            "loader.js",
            "ember-cli-htmlbars",
            "ember-cli-babel"
          ],
          "groupName": "stable ember infrastructure",
          "groupSlug": "stable-ember-infra",
          "updateTypes": ["major", "minor", "patch"],
          "major": {
            "automerge": true
          }
        }
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@typed-ember/semantic-release-config"
  }
}
