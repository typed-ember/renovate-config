{
  "name": "@typed-ember/renovate-config",
  "version": "1.0.0",
  "description": "Renovate bot sharable config for typed-ember repositories",
  "main": "index.js",
  "repository": "git@github.com:typed-ember/renovate-config.git",
  "author": "Mike North <michael.l.north@gmail.com>",
  "license": "MIT",
  "scripts": {
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "test": "echo 'no tests'"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/travis-cli": "7.2.1",
    "@typed-ember/semantic-release-config": "^1.0.0",
    "husky": "^1.1.3",
    "semantic-release": "^15.10.8",
    "travis-deploy-once": "^5.0.9"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:js-lib",
        ":pinOnlyDevDependencies",
        ":automergePatch",
        ":automergeMinor",
        ":semanticCommits"
      ],
      "packageRules": [
        {
          "packageNames": [
            "typescript",
            "tslint",
            "typedoc"
          ],
          "groupName": "typescript packages",
          "groupSlug": "typescript",
          "minor": {
            "automerge": false
          }
        },
        {
          "packageNames": [
            "^@types"
          ],
          "groupName": "ambient types",
          "groupSlug": "ambient-types",
          "minor": {
            "automerge": false
          }
        },
        {
          "packageNames": [
            "broccoli-asset-rev",
            "ember-cli",
            "ember-cli-dependency-checker",
            "ember-cli-eslint",
            "ember-cli-eslint",
            "ember-qunit",
            "ember-cli-sri",
            "qunit-dom",
            "ember-cli-fastboot",
            "ember-cli-htmlbars-inline-precompile",
            "ember-cli-inject-live-reload",
            "ember-cli-qunit",
            "ember-cli-shims",
            "ember-cli-release",
            "ember-cli-uglify",
            "ember-disable-prototype-extensions",
            "ember-export-application-global",
            "ember-load-initializers",
            "ember-resolver",
            "ember-source",
            "eslint-plugin-ember",
            "eslint-plugin-node",
            "loader.js",
            "ember-cli-htmlbars",
            "ember-cli-babel"
          ],
          "groupName": "stable ember infrastructure",
          "groupSlug": "stable-ember-infra",
          "major": {
            "automerge": true
          }
        }
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@typed-ember/semantic-release-config"
  }
}
